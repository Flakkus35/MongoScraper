<body>
	<!-- Navbar -->
	<nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-light">
	  <a id="title_brand" class="navbar-brand" href="#">Mongo Scraper</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarSupportedContent">
	    <ul class="navbar-nav mr-auto">
	      <li class="nav-item active">
	        <a id="scrape_button" class="nav-link" href="/display">Scrape <span class="sr-only">(current)</span></a>
	      </li>
	      <li class="nav-item active">
	        <a id="saved_articles_button" class="nav-link" href="/display">Saved <span class="sr-only">(current)</span></a>
	      </li>
	    </ul>
	  </div>
	</nav>

	<!-- Main Image -->
	<div>
		<img id="main_image" src="https://st.depositphotos.com/1032463/1373/i/950/depositphotos_13732950-stock-photo-background-of-old-vintage-newspapers.jpg">
	</div>

	{{{body}}}

	<div id="note-modal" class="modal" tabindex="-1" role="dialog">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title">Notes</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div id="note-body" class="modal-body">
	      	<div id="note">
	      	</div>
	      	<form id="note-form">
			  <div class="form-group">
			    <input class="form-control" id="note-text">
			  </div>
			</form>
	      </div>
	      <div class="modal-footer">
	        <button type="button" id="add-note" class="btn btn-primary">Add Note</button>
	        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	      </div>
	    </div>
	  </div>
	</div>

	<script type="text/javascript" src="/app.js"></script>
</body>
</html>